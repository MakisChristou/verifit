<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Backup: Local Storage">

        <Preference
            app:key="importcsv"
            app:summary="Import a previous backup from phone storage"
            app:title="Import"
            app:useSimpleSummaryProvider="false" />

        <Preference
            app:key="exportcsv"
            app:summary="Export to phone storage"
            app:title="Export"
            app:useSimpleSummaryProvider="false" />

        <Preference
            app:key="deletedata"
            app:summary="Delete all app workout data"
            app:title="Clear Data"
            app:useSimpleSummaryProvider="false" />


    <PreferenceCategory app:title="Backup: Webdav">

        <SwitchPreference
            android:defaultValue="false"
            android:key="togglewebdav"
            android:title="Webdav Backup" />
        <Preference
            app:key="importwebdav"
            app:summary="Import a previous backup from webdav server"
            app:title="Import"
            app:useSimpleSummaryProvider="false" />

        <Preference
            app:key="exportwebdav"
            app:summary="Export to webdav server"
            app:title="Export"
            app:useSimpleSummaryProvider="false" />
        <EditTextPreference
            android:key="webdavurl"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Url"
            app:summary="http://example.com" />
        <EditTextPreference
            android:key="webdavusername"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username"
            app:summary="user" />
        <EditTextPreference
            android:key="webdavpassword"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password" />

        <Preference
            android:key="webdavcheckconnection"
            android:summary="Test webdav configuration"
            android:title="Check Connection" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="autowebdavbackup"
            android:summary="Auto export workouts to your webdav server"
            android:title="Automatic Export" />

    </PreferenceCategory>
    </PreferenceCategory>

